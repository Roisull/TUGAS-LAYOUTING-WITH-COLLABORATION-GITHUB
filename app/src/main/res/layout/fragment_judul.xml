<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".JudulFragment">

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TableLayout
            android:layout_width="50dp"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_baseline_search_24" />

        </TableLayout>
        <TableLayout
            android:layout_width="300dp"
            android:layout_height="50dp">
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:fontFamily="@font/poppins"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:text="Judul" />

        </TableLayout>
        <TableLayout
            android:layout_width="40dp"
            android:layout_height="50dp">

            <ImageView
                android:layout_marginTop="5dp"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:background="@mipmap/logo_account" />


        </TableLayout>

    </TableRow>

    <TableRow
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TableLayout
            android:layout_width="75dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="Terbaru"
                android:textAlignment="center"
                android:fontFamily="@font/poppins"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </TableLayout>
        <TableLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="Indonesia"
                android:textAlignment="center"
                android:fontFamily="@font/poppins"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </TableLayout>
        <TableLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="Dunia"
                android:textAlignment="center"
                android:fontFamily="@font/poppins"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </TableLayout>
        <TableLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="Bisnis"
                android:textAlignment="center"
                android:fontFamily="@font/poppins"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </TableLayout>
        <TableLayout
            android:layout_width="85dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="Teknologi"
                android:textAlignment="center"
                android:fontFamily="@font/poppins"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </TableLayout>
    </TableRow>

    <View
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="@color/grey_hint"
        />
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/berita"
                android:layout_marginTop="25dp"
                android:background="@drawable/brigadirsambo"
                android:layout_width="wrap_content"
                android:layout_height="400dp">

                <RelativeLayout
                    android:layout_marginTop="180dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/detik"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:text="detikcom '"
                        android:textColor="@color/grey_hint"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/waktu"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_toEndOf="@id/detik"
                        android:text="1 jam yang lalu"
                        android:textColor="@color/grey_hint"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/waktu"
                        android:layout_marginStart="15dp"
                        android:fontFamily="@font/poppins"
                        android:padding="10dp"
                        android:text="Ini yang bikin Ferdy sambo 'Nyerah' Akui rekayasa pembunuhan Brigadir Yoshua"
                        android:textColor="@color/white"
                        android:textSize="25sp"
                        android:textStyle="bold" />
                </RelativeLayout>

            </FrameLayout>
            <RelativeLayout
                android:padding="10dp"
                android:background="@drawable/bg_liputan"
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <ImageView
                    android:id="@+id/iv_liputan"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="80dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_baseline_chat_24" />
                <TextView
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lihat liputan lengkap"
                    android:layout_marginTop="15dp"
                    android:textSize="18sp"
                    android:layout_toEndOf="@id/iv_liputan"
                    android:textColor="@color/blue_primary"/>

            </RelativeLayout>

            <FrameLayout
                android:id="@+id/berita1"
                android:layout_marginTop="25dp"
                android:background="@drawable/brigadirsambo"
                android:layout_width="wrap_content"
                android:layout_height="400dp">

                <RelativeLayout
                    android:layout_marginTop="180dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/detik1"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:text="detikcom '"
                        android:textColor="@color/grey_hint"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/waktu1"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_toEndOf="@id/detik1"
                        android:text="1 jam yang lalu"
                        android:textColor="@color/grey_hint"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/waktu1"
                        android:layout_marginStart="15dp"
                        android:fontFamily="@font/poppins"
                        android:padding="10dp"
                        android:text="Ini yang bikin Ferdy sambo 'Nyerah' Akui rekayasa pembunuhan Brigadir Yoshua"
                        android:textColor="@color/white"
                        android:textSize="25sp"
                        android:textStyle="bold" />
                </RelativeLayout>

            </FrameLayout>
            <RelativeLayout
                android:padding="10dp"
                android:background="@drawable/bg_liputan"
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <ImageView
                    android:layout_marginStart="80dp"
                    android:id="@+id/iv_liputan1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_baseline_chat_24" />
                <TextView
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lihat liputan lengkap"
                    android:layout_marginTop="15dp"
                    android:textSize="18sp"
                    android:layout_toEndOf="@id/iv_liputan1"
                    android:textColor="@color/blue_primary"/>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>